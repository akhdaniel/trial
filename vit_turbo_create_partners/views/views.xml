<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="temp_partner_list">
      <field name="name">temp_partner list</field>
      <field name="model">vit.temp_partner</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="invoice_warn"/>
          <field name="sale_warn"/>
          <field name="active"/>
          <field name="street"/>
          <field name="street2"/>
          <field name="phone"/>
          <field name="mobile"/>
          <field name="picking_warn"/>
          <field name="purchase_warn"/>
          <field name="state"/>
          <!-- <field name="email"/>
          <field name="city"/>  -->
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="temp_partner_form">
      <field name="name">temp_partner form</field>
      <field name="model">vit.temp_partner</field>
      <field name="arch" type="xml">
        <form>
        <header>
          <button name="process" string="Process Import" type="object"/>
          <button name="dummy_create_partners" string="Process Dummy" type="object"/>
        </header>
        <sheet>
        <group>
          <field name="name"/>
          <field name="invoice_warn"/>
          <field name="sale_warn"/>
          <field name="active"/>
          <field name="street"/>
          <field name="street2"/>
          <field name="phone"/>
          <field name="mobile"/>
          <field name="picking_warn"/>
          <field name="purchase_warn" />
          <field name="state"/>
        </group>
        </sheet>
          
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="temp_partner_action_window">
      <field name="name">temp_partner window</field>
      <field name="res_model">vit.temp_partner</field>
      <field name="view_mode">tree,form</field>
    </record>

